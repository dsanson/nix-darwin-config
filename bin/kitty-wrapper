#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

# dependencies: yabai jq kitty

app=$(yabai -m query --windows --window | jq -r .app || echo) 

case "$app" in
  "kitty"|".kitty-wrapped")
    path="$(yabai -m query --windows --window \
      | jq -r .title \
      | sed -e 's/.*: //')"
    dir="${path/#\~/$HOME}"
    ;; "Finder")
    path="$(osascript -e 'tell app "Finder" to get posix path of ((target of window 1) as alias)')"
    dir="$path"
    ;;
  "Preview")
    path="$(osascript -e 'tell app "Preview" to return path of front document')"
    path="${path%/*}"
    dir="$path"
    ;;
  "Microsoft Word")
    path="$(osascript -e 'tell application "Microsoft Word"' -e 'set thePath to (path of front document)' -e 'return POSIX path of thePath' -e 'end tell')"
    dir="$path"
    ;;
   *)
    dir="$HOME"
    ;;
esac

if [[ ! -d "$dir" ]]; then
  dir="$HOME"
fi

kitty --single-instance --instance-group=1 --listen-on=unix:/tmp/mykitty -d="$dir" "$@"
