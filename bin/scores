#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

# depends on:
#  ack, curl, gnsed, pandoc iconv, gdate

favorites="UCLA|Golden State|Ohio State|Illinois State"
tweaks=""

case "${1:-}" in
    nba)
        league="$1"
        tweaks='s/LA|/LA Clippers|/;'
        ;;
    ncaaf|ncf|cfb)
        league="college-football"
        ;;
    ncb|cbb)
        league="mens-college-basketball"
        ;;
    h|-h*)
        echo 
        echo "Usage: $(basename "${0:-scores}") nfl|nba|mlb|nhl|ncb|ncf|wnba [top]"
        exit
        ;;
    *)
        league="${1:-nba}"
        ;;
esac

url="https://www.espn.com/$league/bottomline/scores"

{
echo "|AWAY|SCORE|HOME|TIME|"
echo "|---:|:---:|:---|---:|"
curl --silent "$url" | \
   iconv -f ISO-8859-1 -t utf-8 | \
   sed 's/&/\n/g' | grep 'left'  | \
   sed 's/.*=//;
       s/%20/ /g;
       s/%26/\&/g;
       s/   /| |/;
       s/ at /|at|/;
       s/(\([0-9][0-9]*:.*\))/|\1/;
       s/ (\(HALFTIME.*\))/|\1/;
       s/ (\(FINAL.*\))/|\1/;
       s/ (\([A-Z].* [0-9][0-9]* \(.*\)\))/|\2/;
       s/ (\(END OF.*\))/|\1/;
       s/\([0-9][0-9]*\)|/|\1-/;
       s/- \(|.*\) \([0-9][0-9]*\) *|/-\2\1|/;
       s/- |\([^0-9]*\)\([0-9][0-9]*\) (\(BOT [^)]*\))/-\2|\1|\3/;
       s/- |\([^0-9]*\)\([0-9][0-9]*\) (\(TOP [^)]*\))/-\2|\1|\3/;
       '"$tweaks" | \
         while read -r game; do
           time_pattern='([0-1]?[0-9]:[0-5][0-9] [AP][M]) ET'
           # Extract the full matched time
           time=$(echo "$game" | sed -E  "s/.*\|$time_pattern.*/\1/")
           if [[ "$time" != "$game" ]]; then
             match="${game%%"${time}"*}"
             ct_time=$(gdate -d "$(TZ='America/New_York' gdate -d "$time" +"%Y-%m-%d %I:%M %p %Z")" +"%I:%M %p %Z")
             echo "$match $ct_time"
           else
             echo "$game"
           fi
         done 
      } | pandoc -t plain | sed '1,2d;/^$/d' | \
       ack --passthru --color --color-match=green '\^.*?  ' | \
       ack --passthru --color --color-match=yellow "$favorites" | \
       sed 's/^\( *\)\([^A-Z^]*\)\^/ \1\2/' | \
       sed 's/\^\([A-z ]*\)/\1 /'

