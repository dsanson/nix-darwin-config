#!/usr/bin/env bash
set -o errexit
set -o nounset
set -o pipefail

declare -a layouts
layouts=(max full full_relaxed center left left_half right right_half zoom zoom_slides obs portrait_relaxed 720p 1080p 480p 360p 240p)
declare -a cycles
cycles=(full full_relaxed center left right)

if [[ "${1:-}" == "list" ]]; then
  printf '%s\n' "${layouts[@]}"
  exit
fi

if [[ "${1:-}" == "-s" ]]; then
  space="$2"
  shift 2 
else
  space=$(yabai -m query --spaces --space | jq .index)
fi

display_w=$(yabai -m query --displays --display | jq '.frame.w | floor')
display_h=$(yabai -m query --displays --display | jq '.frame.h | floor')

mkdir -p "$HOME/.cache/yabai"
if [[ -e $HOME/.cache/yabai/layout.${space} ]]; then
    read -r current<"$HOME/.cache/yabai/layout.${space}"
else
    current="full"
fi


max() {
   tp=0
   bp=0
   lp=0
   rp=0
   wg=0
}

full() {
   tp=5
   bp=5
   lp=5
   rp=5
   wg=5
}

full_relaxed() {
   tp=20
   bp=20
   lp=50
   rp=50
   wg=20
}

portrait_relaxed() {
   tp=200
   bp=200
   lp=50
   rp=50
   wg=20
}

center() {
   w=${1:-1000}
   w=$((w > display_w ? display_w : w))
   w=$((w < 500 ? 500 : w))
   tp=0
   bp=5
   lp=$(((display_w - w) / 2))
   rp=$(((display_w - w) / 2))
   wg=5
}

left() {
   pct=${1:-60}
   pct=$((pct>100 ? 100 : pct))
   pct=$((pct<20 ? 20 : pct))
   ppct=$((100 - pct))
   pad=5
   offset=$(((display_w - (pad * 2)) * ppct / 100 + pad))
   tp=5
   bp=5
   lp=$pad
   rp=$offset
   wg=5
}

obs() {
   pct=${1:-70}
   pct=$((pct>100 ? 100 : pct))
   pct=$((pct<20 ? 20 : pct))
   ppct=$((100 - pct))
   pad=5
   offset=$(((display_w - (pad * 2)) * ppct / 100 + pad))
   tp=5
   bp=5
   lp=$pad
   rp=$offset
   wg=5
}

right() {
   pct=${1:-60}
   pct=$((pct>100 ? 100 : pct))
   pct=$((pct<20 ? 20 : pct))
   ppct=$((100 - pct))
   pad=5
   offset=$(((display_w - (pad * 2)) * ppct / 100 + pad))
   tp=5
   bp=5
   lp=$offset
   rp=$pad
   wg=5
}

left_half() {
    left 50
}

right_half() {
    right 50
}

zoom() {
   h=${1:-720}
   w=$((h * 16 / 9 + 1)) # 16:9 ratio
   o=${2:-50}
   tp=$(((display_h - h) / 2 - o))
   bp=$(((display_h - h) / 2 + o))
   lp=$(((display_w - w) / 2))
   rp=$(((display_w - w) / 2))
   wg=5
}


zoom_slides() {
   h=${1:-720}
   w=$((h * 16 / 11 + 1))  
   o=${2:-50}
   tp=$(((display_h - h) / 2 - o))
   bp=$(((display_h - h) / 2 + o))
   lp=$(((display_w - w) / 2))
   rp=$(((display_w - w) / 2))
   wg=5
}

720p() {
  w=1280
  h=720
  o=0
  tp=$(((display_h - h) / 2 - o))
  bp=$(((display_h - h) / 2 + o))
  lp=$(((display_w - w) / 2))
  rp=$(((display_w - w) / 2))
  wg=5
}

1080p() {
   w=1920
   h=1080
   o=0
   tp=$(((display_h - h) / 2 - o))
   bp=$(((display_h - h) / 2 + o))
   lp=$(((display_w - w) / 2))
   rp=$(((display_w - w) / 2))
   wg=5
}

480p() {
  w=854
  h=480
  o=0
  tp=$(((display_h - h) / 2 - o))
  bp=$(((display_h - h) / 2 + o))
  lp=$(((display_w - w) / 2))
  rp=$(((display_w - w) / 2))
  wg=5
}

360p() {
  w=640
  h=360
  o=0
  tp=$(((display_h - h) / 2 - o))
  bp=$(((display_h - h) / 2 + o))
  lp=$(((display_w - w) / 2))
  rp=$(((display_w - w) / 2))
  wg=5
}

240p() {
  w=426
  h=240
  o=0
  tp=$(((display_h - h) / 2 - o))
  bp=$(((display_h - h) / 2 + o))
  lp=$(((display_w - w) / 2))
  rp=$(((display_w - w) / 2))
  wg=5
}

if [[ -z "${1:-}" || "$1" == "cycle" || "$1" == "next" ]]; then
    c=0
    for i in "${!cycles[@]}"; do
        [[ "$current" == "${cycles[$i]}" ]] && c=$((i + 1)) 
    done
    [[ $c -ge "${#cycles[@]}" ]] && c=0
    ${cycles[$c]}
    echo "${cycles[$c]}" > "$HOME/.cache/yabai/layout.${space}"
elif [[ "$1" == "current" ]]; then
   ${current}
else
    for layout in "${layouts[@]}"; do
        [[ "$1" == "$layout" ]] && "$@"
        echo "$1" > "$HOME/.cache/yabai/layout.${space}"
    done
fi

yabai -m config --space "$space" top_padding "$tp"
yabai -m config --space "$space" bottom_padding "$bp"
yabai -m config --space "$space" left_padding "$lp" 
yabai -m config --space "$space" right_padding "$rp" 
yabai -m config --space "$space" window_gap "$wg"
